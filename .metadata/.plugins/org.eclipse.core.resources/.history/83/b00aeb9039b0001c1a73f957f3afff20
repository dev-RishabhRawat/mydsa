package backtracking;

import java.util.Arrays;

public class BacktrackingProblems {

	public static int maze(int[][] arr,int row,int col) {
	  if(row == arr.length-1 && col == arr.length-1 ) {
		  return 1;
	  }
	  
	  int dCount = 0;
	  if(col<=arr.length-1) {
		  dCount = maze(arr,col+1,row);
	  }
	  int rCount = 0;
	  if(row<=arr.length-1) {
		  rCount = maze(arr,col,row+1);
	  }
	  return dCount + rCount;	  
	}
	
	public static void printMaze(int[][] arr,int row,int col,String p) {
		  if(row == arr.length-1 && col == arr.length-1 ) {
			  System.out.println(p);
			  return;
		  }
		  
		  if(col<=arr.length-1) {
			  maze(arr,col+1,row,p+'D');
		  }
		  if(row<=arr.length-1) {
			   maze(arr,col,row+1+'R');
		  }
		}
	
	
	public static void main(String[] args) {
		int[][] arr = new int[3][3];
		int res = maze(arr,0,0);
		System.out.println(res);
		
		printMaze(arr,0,0,"");
	}
	
	 
}
